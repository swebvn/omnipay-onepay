{
    "name": "phpviet/omnipay-onepay",
    "type": "library",
    "description": "Thư viện hổ trợ tích hợp cổng thanh toán OnePay.",
    "keywords": [
        "phpviet",
        "onepay",
        "payment",
        "vietnam-payment",
        "payment-gateway",
        "vietnam-payment-gateway"
    ],
    "homepage": "https://github.com/phpviet/omnipay-onepay",
    "license": "MIT",
    "authors": [
        {
            "name": "Vuong Xuong Minh",
            "email": "vuongxuongminh@gmail.com"
        }
    ],
    "require": {
        "php": "^8.2|^8.3",
        "omnipay/common": "^3.0",
        "php-http/guzzle7-adapter": "^1.0"
    },
    "require-dev": {
        "http-interop/http-factory-guzzle": "^1.2",
        "omnipay/tests": "^4.1",
        "scrutinizer/ocular": "^1.5"
    },
    "autoload": {
        "psr-4": {
            "Omnipay\\OnePay\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Omnipay\\OnePay\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "\"vendor/bin/phpunit\""
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
	}
}
